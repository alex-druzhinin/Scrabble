<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".midgameScreenshot"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player 1: 50"
            android:id="@+id/player1Score"
            android:textSize="25dp"
            android:background="#ff3aafff"
            android:textColor="#ffffffff"
            android:layout_weight=".5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player 2: 150"
            android:id="@+id/player2Score"
            android:textSize="25dp"
            android:background="#ff21b480"
            android:textColor="#ffffffff"
            android:layout_weight=".5" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="10" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            android:background="@android:drawable/ic_menu_sort_by_size"
            android:layout_weight=".65" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_weight="69.34">

        <Space
            android:layout_width="40dp"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/picture_frame"
            android:paddingTop="60dp"
            android:paddingBottom="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#ffb09152">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile1"
                android:background="@drawable/scrabbletile_c" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile2"
                android:background="@drawable/scrabbletile_d" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile3"
                android:background="@drawable/scrabbletile_i" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile4"
                android:background="@drawable/scrabbletile_h" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile5"
                android:background="@drawable/scrabbletile_s" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile6"
                android:background="@drawable/scrabbletile_m" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerTile7"
                android:background="@drawable/scrabbletile_t" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.example.administrator.scrabble.Scrabble.board_surfaceview
                android:layout_width="570dp"
                android:layout_height="574dp"
                android:id="@+id/board_surfaceview"
                android:layout_gravity="center"
                android:background="#00ffffff" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>